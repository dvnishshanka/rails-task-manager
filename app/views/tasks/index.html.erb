<h1>My Tasks</h1>
<% @tasks.each do |task|
   if task.completed == true %>
    <i class="far fa-check-square"></i>
   <% else %>
    <i class="far fa-square"></i>
   <% end %>
  <%= link_to task.title  , task_path(task) %><span style="width:20px; display:inline-block"></span>
  <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure to delete #{task.title}?"} do %>
 <i class="fa-solid fa-trash"></i>
  <% end %>


  <br>
<%end %>
<br>
<%= link_to "+ Add a new task"  , tasks_new_path %>
